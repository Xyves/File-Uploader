<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Home</title>
  </head>
  <body>
    <%- include("partials/nav.ejs" ) %>
      <% if (user){%>
        <h3>User is logged in!</h3>
        <h3>Hi <%= user.username %></h3>
<div class="container flex  bg-gray-700 mx-auto p-7 text-white">
  <div class="folder-layout W-3/4 ">
    <div class="top-layout">
      <div class="links flex">
        <a href="/">
        <img src="./assets/home-custom.png" alt="" srcset="">
        </a>
      </div>
      <div class="create-folder my-6">
         <form action="/folders/create" method="post">
          <input type="text" name="name" placeholder="Enter folder name">
          <button type="submit">
           <img src="./assets/folder-plus-custom.png" alt="" srcset="">
          </button>
         </form>
         </a>
      </div>
    </div>
     <div class="bottom-layout">
      <ul class="folders flex flex-row ">
        <% if(folders && folders.length > 0) { %>
          <% folders.forEach((folder) => { %>
            <div class="folder mx-5 items-center justify-center">
              <div class="folder-image flex justify-center items-center  ">
                <a href="/folder/<%= folder.id %>">
                <img src="../assets/icons8-folder-64.png" alt="" class="cursor-pointer">
              </div>
              <li class="flex items-center justify-center"><%= folder.title%></a> </li>
                <form action="/folders/delete"method="post">
                  <input type="hidden" name="id" value="<%= folder.id %>">
                  <button type="submit" >X</button>
                </form>
              </div>
          <% }) %>
        <% } else { %>
          <li>No folders found</li>
        <% } %>
    </ul>
  </div>
  </div>
</div>
      <%} else{%>
        <h2>User is not logged in!</h2>
        <% }%>
  </body>
</html>
